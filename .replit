modules = ["nodejs-20", "python-3.11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PyWrite Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PyWrite Guide"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PyWrite"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PyWrite Sidecar"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PyWrite Multi-Modal Demo"

[[workflows.workflow.tasks]]
