modules = ["nodejs-20", "python-3.11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PyWrite Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PyWrite Guide"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PyWrite"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PyWrite Sidecar"

[[workflows.workflow]]
name = "PyWrite Demo"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./pywrite.sh demo"

[[workflows.workflow]]
name = "PyWrite Guide"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./pywrite.sh guide"

[[workflows.workflow]]
name = "PyWrite"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "PyWrite Sidecar"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python sidecar.py"

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "python -m streamlit run streamlit_pywrite.py --server.port=5000 --server.address=0.0.0.0"]
